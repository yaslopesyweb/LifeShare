@model Empresa

<div class="mx-auto form-group">
    <label asp-for="Nome">Nome</label>
    <input asp-for="Nome" placeholder="Digite o nome" class="form-control" required />
</div>
<div class="mx-auto form-group">
    <label asp-for="DataEntrada">Data de Entrada</label>
    <input asp-for="DataEntrada" type="date" class="form-control" />
</div>
<div class="mx-auto form-group">
    <label asp-for="Status">Status</label>
    <select asp-for="Status" class="form-control"
        asp-items="@Html.GetEnumSelectList<Status>()">
        <option>Selecione</option>
    </select>
</div>

<style>
    label {
        color: #FF512F;
    }

    body{
        width: 100%;
        margin-top: 80px;
    }
</style>